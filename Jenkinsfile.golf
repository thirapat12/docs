pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        nodejs('node-v8.14.0') 
            
    }

    stages {
        
        stage('install') {
            steps {
                // Run command
                sh "npm install --verbose"
            }
        }
        stage('build') {
            steps {
                // Run command
                sh "npm run build-prod"
            }
        }
    }
}
